<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/initials_textView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/initials_background"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="AR"/>

    <TextView
        android:id="@+id/fullname_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/phoneNumber_textView"
        app:layout_constraintStart_toEndOf="@id/initials_textView"
        app:layout_constraintTop_toTopOf="@+id/initials_textView"
        tools:text="Artin Rexhepi"
        />

    <TextView
        android:id="@+id/phoneNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/initials_textView"
        app:layout_constraintTop_toBottomOf="@+id/fullname_textView"
        app:layout_constraintStart_toEndOf="@id/initials_textView"
        tools:text="049154521"

        />

</androidx.constraintlayout.widget.ConstraintLayout>